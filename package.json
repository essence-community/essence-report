{
  "name": "essence-report-server",
  "version": "1.0.0",
  "description": "Report Server",
  "main": "index.js",
  "author": "Ivan Artemov (honyrik@gmail.com)",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "node_modules/.bin/rimraf dist && gulp all",
    "start": "yarn workspace @essence-report/server run start",
    "start:prod": "yarn workspace @essence-report/server run start:cluster"
  },
  "workspaces": [
    "server",
    "plugininf",
    "plugins/**/**"
  ],
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "devDependencies": {
    "@essence-community/eslint-config-react": "^2.2.0",
    "@types/cpy": "^7.1.3",
    "@types/eslint": "^8.2.0",
    "@types/gulp": "^4.0.5",
    "@types/node": "^16.11.11",
    "@types/rimraf": "^3.0.0",
    "cpy": "^8.1.2",
    "eslint": "^8.3.0",
    "gulp": "^4.0.0",
    "gulp-tslint": "^8.1.3",
    "gulp-typescript": "^6.0.0-alpha.1",
    "husky": "^7.0.4",
    "lint-staged": "^12.1.2",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "ts-node": "^10.4.0",
    "tslint": "^6.1.2",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.2.4"
  }
}
