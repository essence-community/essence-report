{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": { "*": ["@types"] },
        "types": ["node"],
        "lib": ["es2018"],
        "target": "ES2018",
        "module": "commonjs",
        "sourceMap": true,
        "skipLibCheck": true,
        "outDir": "./lib"
    },
    "include": ["lib/**/*.ts"],
    "exclude": ["node_modules", "**/*.spec.ts", "@types"]
}
